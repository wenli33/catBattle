<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#AAAAAA" />
            <!--形狀填充的顏色-->
            <!--stroke描邊-->
            <!--圓角，只適用rectangle-->
            <!--內容與形狀邊界的內間距-->
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#AAAAAA"
                android:centerColor="#AAAAAA"
                android:endColor="#AAAAAA"
                android:angle="270" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>