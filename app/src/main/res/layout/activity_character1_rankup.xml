<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gray"
    tools:context=".character1_rankup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="172dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="172dp">
            <TextView
                android:id="@+id/character1_rankup_checkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size30sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="172dp"
            android:layout_gravity="center">
            <Button
                android:id="@+id/character1_rankup_yes"
                android:layout_width="@dimen/size130dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size3dp"
                android:layout_marginTop="@dimen/size10dp"
                android:background=  "@drawable/button_blue"
                android:textSize="@dimen/size30sp"
                android:text="確定" />

            <Button
                android:id="@+id/character1_rankup_no"
                android:layout_width="@dimen/size130dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size10dp"
                android:layout_marginRight="@dimen/size3dp"
                android:background=  "@drawable/button_blue"
                android:textSize="@dimen/size30sp"
                android:text="先不要" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>