<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="265dp">

        <LinearLayout
            android:id="@+id/top"
            android:layout_alignParentTop='true'
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/size5dp">

            <TextView
                android:id="@+id/rank"
                android:layout_width="@dimen/size0dp"
                android:layout_weight = "0.2"
                android:layout_height="wrap_content"
                android:textSize = "@dimen/size20sp"
                android:text="等級:" />

            <TextView
                android:id="@+id/rank_rank"
                android:layout_width="@dimen/size0dp"
                android:layout_height="wrap_content"
                android:layout_weight = "0.1"
                android:textSize = "@dimen/size20sp"
                />

            <TextView
                android:id="@+id/money"
                android:layout_width="@dimen/size0dp"
                android:layout_height="wrap_content"
                android:layout_weight = "0.15"
                android:textSize = "@dimen/size20sp"
                android:text="錢：" />

            <TextView
                android:id="@+id/money_money"
                android:layout_width="@dimen/size0dp"
                android:layout_height="wrap_content"
                android:layout_weight = "0.45"
                android:textSize = "@dimen/size20sp"
                />

            <TextView
                android:id="@+id/g"
                android:layout_width="@dimen/size0dp"
                android:layout_height="wrap_content"
                android:layout_weight = "0.1"
                android:textSize = "@dimen/size20sp"
                android:text="G" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size500dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/character1"
                    android:layout_width="@dimen/size100dp"
                    android:layout_height="@dimen/size100dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_marginTop="@dimen/size5dp"
                    android:layout_marginRight="@dimen/size5dp"
                    android:layout_marginBottom="@dimen/size5dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size35sp"
                    android:background=  "@drawable/white_circle" />

                <ImageButton
                    android:id="@+id/character2"
                    android:layout_width="@dimen/size100dp"
                    android:layout_height="@dimen/size100dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_marginTop="@dimen/size5dp"
                    android:layout_marginRight="@dimen/size5dp"
                    android:layout_marginBottom="@dimen/size5dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size35sp"
                    android:background=  "@drawable/black_circle" />

                <ImageButton
                    android:id="@+id/character3"
                    android:layout_width="@dimen/size100dp"
                    android:layout_height="@dimen/size100dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_marginTop="@dimen/size5dp"
                    android:layout_marginRight="@dimen/size5dp"
                    android:layout_marginBottom="@dimen/size5dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size35sp"
                    android:background=  "@drawable/orange_circle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/character4"
                    android:layout_width="@dimen/size100dp"
                    android:layout_height="@dimen/size100dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_marginTop="@dimen/size5dp"
                    android:layout_marginRight="@dimen/size5dp"
                    android:layout_marginBottom="@dimen/size5dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size35sp"
                    android:background=  "@drawable/white_triangle" />

                <ImageButton
                    android:id="@+id/character5"
                    android:layout_width="@dimen/size100dp"
                    android:layout_height="@dimen/size100dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_marginTop="@dimen/size5dp"
                    android:layout_marginRight="@dimen/size5dp"
                    android:layout_marginBottom="@dimen/size5dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size35sp"
                    android:background=  "@drawable/black_triangle" />

                <ImageButton
                    android:id="@+id/character6"
                    android:layout_width="@dimen/size100dp"
                    android:layout_height="@dimen/size100dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_marginTop="@dimen/size5dp"
                    android:layout_marginRight="@dimen/size5dp"
                    android:layout_marginBottom="@dimen/size5dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size35sp"
                    android:background=  "@drawable/orange_triangle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/character7"
                    android:layout_width="@dimen/size100dp"
                    android:layout_height="@dimen/size100dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_marginTop="@dimen/size5dp"
                    android:layout_marginRight="@dimen/size5dp"
                    android:layout_marginBottom="@dimen/size5dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size35sp"
                    android:background=  "@drawable/white_carton" />

                <ImageButton
                    android:id="@+id/character8"
                    android:layout_width="@dimen/size100dp"
                    android:layout_height="@dimen/size100dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_marginTop="@dimen/size5dp"
                    android:layout_marginRight="@dimen/size5dp"
                    android:layout_marginBottom="@dimen/size5dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size35sp"
                    android:background=  "@drawable/black_carton" />

                <ImageButton
                    android:id="@+id/character9"
                    android:layout_width="@dimen/size100dp"
                    android:layout_height="@dimen/size100dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_marginTop="@dimen/size5dp"
                    android:layout_marginRight="@dimen/size5dp"
                    android:layout_marginBottom="@dimen/size5dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size35sp"
                    android:background=  "@drawable/orange_carton"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/character10"
                    android:layout_width="@dimen/size100dp"
                    android:layout_height="@dimen/size100dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_marginTop="@dimen/size5dp"
                    android:layout_marginRight="@dimen/size5dp"
                    android:layout_marginBottom="@dimen/size5dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size35sp"
                    android:background=  "@drawable/white_strip" />

                <ImageButton
                    android:id="@+id/character11"
                    android:layout_width="@dimen/size100dp"
                    android:layout_height="@dimen/size100dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_marginTop="@dimen/size5dp"
                    android:layout_marginRight="@dimen/size5dp"
                    android:layout_marginBottom="@dimen/size5dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size35sp"
                    android:background=  "@drawable/black_strip" />

                <ImageButton
                    android:id="@+id/character12"
                    android:layout_width="@dimen/size100dp"
                    android:layout_height="@dimen/size100dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_marginTop="@dimen/size5dp"
                    android:layout_marginRight="@dimen/size5dp"
                    android:layout_marginBottom="@dimen/size5dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size35sp"
                    android:background=  "@drawable/orange_strip" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom = 'true'
            android:weightSum="4"
            android:orientation="horizontal">

            <Button
                android:layout_alignParentLeft='true'
                android:id="@+id/home"
                android:layout_width="@dimen/size80dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size3dp"
                android:layout_marginTop="@dimen/size3dp"
                android:layout_marginRight="@dimen/size3dp"
                android:layout_marginBottom="@dimen/size3dp"
                android:textSize="@dimen/size10sp"
                android:background=  "@drawable/button_blue"
                android:text="主窩" />

            <Button
                android:id="@+id/character"
                android:layout_centerVertical='true'
                android:layout_weight="1"
                android:layout_width="@dimen/size80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size100dp"
                android:layout_marginTop="@dimen/size3dp"
                android:layout_marginRight="@dimen/size3dp"
                android:layout_marginBottom="@dimen/size3dp"
                android:textSize="@dimen/size10sp"
                android:background=  "@drawable/button_blue"
                android:text="喵咪" />

            <Button
                android:id="@+id/team"
                android:layout_centerVertical='true'
                android:layout_weight="1"
                android:layout_width="@dimen/size80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size200dp"
                android:layout_marginTop="@dimen/size3dp"
                android:layout_marginRight="@dimen/size3dp"
                android:layout_marginBottom="@dimen/size3dp"
                android:textSize="@dimen/size10sp"
                android:background=  "@drawable/button_blue"
                android:text="編隊" />

            <Button
                android:id="@+id/gacha"
                android:layout_alignParentRight='true'
                android:layout_weight="1"
                android:layout_width="@dimen/size80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size3dp"
                android:layout_marginTop="@dimen/size3dp"
                android:layout_marginRight="@dimen/size3dp"
                android:layout_marginBottom="@dimen/size3dp"
                android:textSize="@dimen/size10sp"
                android:background=  "@drawable/button_blue"
                android:text="召喚" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>