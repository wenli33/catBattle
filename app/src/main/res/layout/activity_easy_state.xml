<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gray"
    tools:context=".easy_state">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="265dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/easy_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="勝利"
                android:layout_gravity="center"
                android:textSize="@dimen/size50sp" />
            <TextView
                android:id="@+id/easy_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/size5dp"
                android:layout_marginRight="@dimen/size5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="獲得300000G"
                android:textSize="@dimen/size30sp" />
            <Button
                android:id="@+id/easy_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background=  "@drawable/button_blue"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="確定" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>